<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:style="clr-namespace:SmoothCurvedSegment.Resources">

    <SolidColorBrush x:Key="GridSplitter.Static.BorderBrush" Color="{Binding Source={x:Static style:Colors.ExtraLightTheme}}"/>
    <Thickness x:Key="GridSplitter.Static.BorderThickness">10,5,10,5</Thickness>

    <Style TargetType="{x:Type GridSplitter}" x:Key="GridSplitterStyle">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="BorderBrush" Value="{StaticResource GridSplitter.Static.BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource GridSplitter.Static.BorderThickness}"/>
    </Style>
</ResourceDictionary>