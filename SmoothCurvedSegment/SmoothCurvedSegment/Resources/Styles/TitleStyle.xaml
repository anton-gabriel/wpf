<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:style="clr-namespace:SmoothCurvedSegment.Resources"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="PaneTitle.TextBlock.Static.FontSize">15</system:Double>
    <SolidColorBrush x:Key="PaneTitle.TextBlock.Static.Foreground" Color="{Binding Source={x:Static style:Colors.DarkTheme}}"/>

    <Style TargetType="{x:Type TextBlock}" x:Key="PaneTitleStyle">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource PaneTitle.TextBlock.Static.Foreground}"/>
        <Setter Property="FontSize" Value="{StaticResource PaneTitle.TextBlock.Static.FontSize}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>