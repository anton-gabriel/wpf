<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:style="clr-namespace:SmoothCurvedSegment.Resources">

    <SolidColorBrush x:Key="BuildingArea.Grid.Background" Color="{Binding Source={x:Static style:Colors.ExtraLightTheme}}"/>

    <Style TargetType="{x:Type Grid}" x:Key="BuildingAreaStyle">
        <Setter Property="Background" Value="{StaticResource BuildingArea.Grid.Background}"/>
    </Style>

</ResourceDictionary>