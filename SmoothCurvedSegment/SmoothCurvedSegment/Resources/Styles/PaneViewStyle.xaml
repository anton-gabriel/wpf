<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:style="clr-namespace:SmoothCurvedSegment.Resources">

    <SolidColorBrush x:Key="PaneView.Grid.Background" Color="{Binding Source={x:Static style:Colors.ExtraLightTheme}}"/>

    <Style TargetType="{x:Type Grid}" x:Key="PaneViewStyle">
        <Setter Property="Background" Value="{StaticResource PaneView.Grid.Background}"/>
    </Style>

</ResourceDictionary>